<div class="list-item h-entry">

    {% set workshop_title = '' %}
    {% set workshop_image_file = '' %}
    {% set workshop_image_media = '' %}
    {% set workshop_tag = '' %}
    {% set workshop_content = '' %}
    {% set workshop_image_width  = page.header.header_image_width|defined(300) %}
    {% set workshop_image_height = page.header.header_image_height|defined(300) %}

    {% for type in page.find('/workshop_types').children if type.folder == page.header.workshop_type %}
        {% set workshop_title = type.title %}
        {% set workshop_image = type.header.image|defined(true) %}
        {% set workshop_image_file = type.header.image %}
        {% set workshop_image_media = type.media.images|first %}
        {% set workshop_content = type.content %}
        {% set workshop_tag = type.taxonomy.tag %}
    {% endfor %}


    <div class="list-blog-header">
        <span class="list-blog-date">
            <time class="dt-published" datetime="{{ page.date|date("c") }}">
                <span>{{ page.date|date("d") }}</span>
                <em>{{ page.date|date("M") }}</em>
            </time>
        </span>
        {% if page.header.link %}
            <h4 class="p-name">
                {% if page.header.continue_link is not sameas(false) %}
                <a href="{{ page.url }}"><i class="fa fa-angle-double-right u-url"></i></a>
                {% endif %}
                <a href="{{ page.header.link }}" class="u-url"> {{ workshop_title }} @ {{ page.header.location }}</a>
            </h4>
        {% else %}
            <h4 class="p-name"><a href="{{ page.url }}" class="u-url"> {{ workshop_title }} @ {{ page.header.location }}</a></h4>
        {% endif %}

        {% if workshop_tag %}
        <span class="tags">
            {% for tag in workshop_tag %}
            <a href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}" class="p-category">{{ tag }}</a>
            {% endfor %}
        </span>
        {% endif %}
        {% if workshop_image_media %}
            {{ workshop_image_media.cropZoom(workshop_image_width, workshop_image_height).html }}
        {% endif %}

    </div>

    <div class="list-blog-padding">
        <div class="e-content">
            {{ workshop_content }}
        </div>


    {% if show_prev_next %}

        <p class="prev-next">
            {% if not page.isFirst %}
                <a class="button" href="{{ page.nextSibling.url }}"><i class="fa fa-chevron-left"></i> {{ 'BLOG.ITEM.NEXT_POST'|t }}</a>
            {% endif %}

            {% if not page.isLast %}
                <a class="button" href="{{ page.prevSibling.url }}">{{ 'BLOG.ITEM.PREV_POST'|t }} <i class="fa fa-chevron-right"></i></a>
            {% endif %}
        </p>
    {% endif %}

    </div>
</div>
