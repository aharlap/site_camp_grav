{% set workshop_image_width  = page.header.header_image_width|defined(400) %}{% set workshop_image_height = page.header.header_image_height|defined(400) %}{% set tag_classes = '' %}{% if page.taxonomy.tag %}  {% set tag_classes = [] %}  {% for tag in page.taxonomy.tag %}    {% set tag_classes = tag_classes|merge(["tag-%s"|format(tag|replace(' ', '-'))]) %}  {% endfor %}  {% set tag_classes = tag_classes|join(' ') %}{% endif %}<!-- Workshop Card -->{% if page.header.link %}  {% if page.header.continue_link is not sameas(false) %}    {% set page_link = '#' %}  {% endif %}{% else %}  {% set page_link = page.url %}{% endif %}<div class="ui card element-item {{tag_classes}}">  <div class="content">    <!-- Workshop title, date & location-->    <div class="header">    {% if page_link is not sameas('#') %}      <a href={{ page_link }}>{{ page.title }}</a>    {% else %}      {{ page.title }}    {% endif %}    </div>    {{ page.content }}  </div>  <!-- Workshop images-->  <div class="image">  {% if page.header.image|defined(true) %}    {{ page.media.images|first.cropZoom(workshop_image_width, workshop_image_height).html( page.title, page.title) }}  {% endif %}  </div>  <!--Workshop tags-->  <div class="extra content center aligned">    <button class="ui basic primary button">      Sign up for this workshop!      <i class='fa fa-sign-in'></i>    </button>  {% if page.taxonomy.tag %}    <div class="ui horizontal bulleted link list">    {% for tag in page.taxonomy.tag %}      <a class="item" href="{{ list.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}">      {{tag}}      </a>    {% endfor %}    </div>  {% endif %}  </div></div> <!--close card-->{#         {% if show_prev_next %}      <p class="prev-next">        {% if not page.isFirst %}        <a class="button" href="{{ page.nextSibling.url }}"><i class="fa fa-chevron-left"></i> {{ 'BLOG.ITEM.NEXT_POST'|t }}</a>        {% endif %}        {% if not page.isLast %}        <a class="button" href="{{ page.prevSibling.url }}">{{ 'BLOG.ITEM.PREV_POST'|t }} <i class="fa fa-chevron-right"></i></a>        {% endif %}      </p>      {% endif %}#}