{% set workshop_image_width  = page.header.header_image_width|defined(400) %}{% set workshop_image_height = page.header.header_image_height|defined(400) %}{% set tag_classes = '' %}{% if page.taxonomy.tag %}  {% set tag_classes = [] %}  {% for tag in page.taxonomy.tag %}    {% set tag_classes = tag_classes|merge(["tag-%s"|format(tag|replace(' ', '-'))]) %}  {% endfor %}  {% set tag_classes = tag_classes|join(' ') %}{% endif %}<!-- Workshop Card -->{% if page.header.link %}  {% if page.header.continue_link is not sameas(false) %}    {% set page_link = '#' %}  {% endif %}{% else %}  {% set page_link = page.url %}{% endif %}<div class="ui card element-item {{tag_classes}}">  <div class="content">    <!-- Workshop title, date & location-->    <div class="header">    {% if page_link is not sameas('#') %}      <span href={{ page_link }}>{{ page.title }}</span>    {% else %}      {{ page.title }}    {% endif %}    </div>    <div class="description">    {{ page.content }}    </div>  </div>  <!-- Workshop images-->  <div class="image">  {% if page.header.image|defined(true) %}    {{ page.media.images|first.cropZoom(workshop_image_width, workshop_image_height).html( page.title, page.title) }}  {% endif %}  </div>  <div class="extra meta center aligned">  <!--Workshop tags-->  {% if page.taxonomy.tag %}    <i class="fa fa-tags"></i>    <div class="ui horizontal bulleted link list">    {% for tag in page.taxonomy.tag %}      <span class="ui item">        {{tag}}      </span>    {% endfor %}    </div>    <div class="ui divider"></div>  {% endif %}  <!-- Call to action button -->    <button class="ui primary button">      <i class='fa fa-user-plus'></i>      Sign up for this workshop!    </button>  </div></div> <!--close card-->{#         {% if show_prev_next %}      <p class="prev-next">        {% if not page.isFirst %}        <a class="button" href="{{ page.nextSibling.url }}"><i class="fa fa-chevron-left"></i> {{ 'BLOG.ITEM.NEXT_POST'|t }}</a>        {% endif %}        {% if not page.isLast %}        <a class="button" href="{{ page.prevSibling.url }}">{{ 'BLOG.ITEM.PREV_POST'|t }} <i class="fa fa-chevron-right"></i></a>        {% endif %}      </p>      {% endif %}#}