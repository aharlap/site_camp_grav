{% set workshop_title = page.title %}{% set workshop_image = page.header.image|defined(true) %}{% set workshop_image_file = page.header.image %}{% set workshop_image_media = page.media.images|first %}{% set workshop_content = page.content %}{% set workshop_tag = page.taxonomy.tag %}{% set workshop_image_width  = page.header.header_image_width|defined(400) %}{% set workshop_image_height = page.header.header_image_height|defined(400) %}<!-- Workshop Card -->{% if page.header.link %}  {% if page.header.continue_link is not sameas(false) %}    {% set page_link = '#' %}  {% endif %}{% else %}  {% set page_link = page.url %}{% endif %}<div class="ui card">  <div class="content">    <!-- Workshop title, date & location-->    <div class="header">    {% if page_link is not sameas('#') %}      <a href={{ page_link }}>{{ workshop_title }}</a>    {% else %}      {{ workshop_title }}    {% endif %}    </div>    {{workshop_content}}  </div>  <!-- Workshop images-->  <div class="image">    {% if workshop_image_media %}    {{ workshop_image_media.cropZoom(workshop_image_width, workshop_image_height).html( workshop_title, workshop_title) }}    {% endif %}  </div>  <!--Workshop tags-->  <div class="extra content center aligned">    <button class="ui basic primary button">      Find this workshop!      <i class='fa fa-sign-in'></i>    </button>  {% if workshop_tag %}    <div class="ui horizontal bulleted link list">    {% for tag in workshop_tag %}      <a class="item" href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}">        {{tag}}      </a>    {% endfor %}    </div>  {% endif %}  </div></div> <!--close card-->{#         {% if show_prev_next %}      <p class="prev-next">        {% if not page.isFirst %}        <a class="button" href="{{ page.nextSibling.url }}"><i class="fa fa-chevron-left"></i> {{ 'BLOG.ITEM.NEXT_POST'|t }}</a>        {% endif %}        {% if not page.isLast %}        <a class="button" href="{{ page.prevSibling.url }}">{{ 'BLOG.ITEM.PREV_POST'|t }} <i class="fa fa-chevron-right"></i></a>        {% endif %}      </p>      {% endif %}#}