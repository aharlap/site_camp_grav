    {{ assets.js('bottom') }}
    <script>
    $(function () {
      $(document).ready(function() {
        $.slidebars({
          hideControlClasses: true,
          scrollLock: true
        });
      });
    });
    </script>
  {% endblock %} #}

</body>
</html>
