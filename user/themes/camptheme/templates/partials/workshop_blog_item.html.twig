<div class="list-item h-entry">  {% set workshop_title = '' %}  {% set workshop_image_file = '' %}  {% set workshop_image_media = '' %}  {% set workshop_tag = '' %}  {% set workshop_content = '' %}  {% set workshop_image_width  = page.header.header_image_width|defined(300) %}  {% set workshop_image_height = page.header.header_image_height|defined(300) %}  {% set workshop_location = '' %}  {% set workshop_address = '' %}  {% set workshop_lat = '' %}  {% set workshop_lon = '' %}  {% for type in page.find('/workshop_types').children if type.folder == page.header.workshop_type %}    {% set workshop_title = type.title %}    {% set workshop_image = type.header.image|defined(true) %}    {% set workshop_image_file = type.header.image %}    {% set workshop_image_media = type.media.images|first %}    {% set workshop_content = type.content %}    {% set workshop_tag = type.taxonomy.tag %}  {% endfor %}  {% for location in page.find('/locations').children if location.folder == page.header.location %}    {% set workshop_location = location.title %}    {% set workshop_address = location.header.address %}  {% endfor %}  <div class="list-blog-header">    <span class="list-blog-date">      <time class="dt-published" datetime="{{ page.date|date("c") }}">        <span>{{ page.date|date("d") }}</span>        <em>{{ page.date|date("M") }}</em>      </time>    </span>    <div class="container">      <div class="row">        {% if page.header.link %}        <h4 class="p-name">          {% if page.header.continue_link is not sameas(false) %}          <a href="{{ page.url }}"><i class="fa fa-angle-double-right u-url"></i></a>          {% endif %}          <a href="{{ page.header.link }}" class="u-url"> {{ workshop_title }} @ {{ workshop_location }}</a>        </h4>        {% else %}        <h4 class="p-name"><a href="{{ page.url }}" class="u-url"> {{ workshop_title }} @ {{ workshop_location }}</a></h4>        {% endif %}      </div><!--close row-->      <div class="row">        <div class="col-md-4">          {% if workshop_tag %}          <!--Workshop tags-->          <span class="tags">              {% for tag in workshop_tag %}              <a href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}" class="p-category">{{ tag }}</a>              {% endfor %}          </span>          {% endif %}          <!--Workshop image-->          {% if workshop_image_media %}          {{ workshop_image_media.cropZoom(workshop_image_width, workshop_image_height).html }}          {% endif %}          <!--Map image-->          {% if workshop_location %}          <a href={{"http://maps.google.com/?q=%s,%s"|format(workshop_location|url_encode, workshop_address|url_encode)}} target="_blank">            {{'<img src="https://maps.googleapis.com/maps/api/staticmap?key=%s&markers=%s,%s&size=%sx%s&zoom=14" />'|format(config.site.googlemapsstatickey, workshop_location|url_encode, workshop_address|url_encode, workshop_image_width, workshop_image_height)}}          </a>          {% endif %}        </div>        <div class="col-md-8">          <div class="e-content">            {{ workshop_content }}          </div>        </div>      </div><!--close row-->        {% if show_prev_next %}        <p class="prev-next">          {% if not page.isFirst %}          <a class="button" href="{{ page.nextSibling.url }}"><i class="fa fa-chevron-left"></i> {{ 'BLOG.ITEM.NEXT_POST'|t }}</a>          {% endif %}          {% if not page.isLast %}          <a class="button" href="{{ page.prevSibling.url }}">{{ 'BLOG.ITEM.PREV_POST'|t }} <i class="fa fa-chevron-right"></i></a>          {% endif %}        </p>        {% endif %}    </div>  </div></div>