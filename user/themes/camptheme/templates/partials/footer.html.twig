{# page link list for footer #}
{% macro page_list_as_links(pages) %}
  {% for page in pages.children.visible %}
<li><a href="{{ page.url }}">{% if page.header.icon %}<i class="uk-icon-{{ page.header.icon }}"></i>{% endif %} {{ page.menu }}</a></li>
  {% endfor %}
{% endmacro %}

<!-- Footer -->

<div id="footer" class="uk-block uk-block-muted uk-block-medium">
  <div class="uk-container">
    <div class="uk-grid uk-grid-match" data-uk-grid-margin>
      <!-- left foot : site links -->
      <div class="uk-width-medium-1-3">
        <div class="uk-panel uk-align-center uk-vertical-align-bottom">
          <ul class="uk-nav">
            {{_self.page_list_as_links(pages)}}
          </ul>
          <div class="uk-grid-divider"></div>
          <ul class="uk-subnav uk-subnav-line">
            <li><a class="item" href="#">Site Map</a></li>
            <li><a class="item" href="#">Contact Us</a></li>
            <li><a class="item" href="#">Terms and Conditions</a></li>
            <li><a class="item" href="#">Privacy Policy</a></li>
            <li><a class="item" href="http://getgrav.org">This site <i class="fa fa-code"></i> with Grav</a></li>
          </ul>
        </div>
      </div>
      <!-- middle footer : email sign-up -->
      <div class="uk-width-medium-1-3">
        <div class="uk-panel">

          <form class="uk-form uk-form-stacked">
            <fieldset data-uk-margin>
              <legend class="uk-text-center"><h2>Sign up and be the first to know about new workshops!</h2></legend>
              <div class="uk-form-row">
                <label class="uk-form-label" for="form-news-fn">First Name</label>
                <div class="uk-form-controls">
                  <input type="text" id="form-news-fn" placeholder="Emma" class="uk-width-1-1">
                </div>
              </div>
              <div class="uk-form-row">
                <label class="uk-form-label">Last Name</label>
                <div class="uk-form-controls">
                  <input type="text" placeholder="Tremblay" class="uk-width-1-1">
                </div>
              </div>
              <div class="uk-form-row">
                <label class="uk-form-label">Your Email</label>
                <div class="uk-form-controls">
                  <input type="email" placeholder="emma@gmail.com" class="uk-width-1-1">
                </div>
              </div>
              <div class="uk-form-row uk-text-center">
                <button class="uk-button uk-button-large uk-button-primary" type="submit" class="uk-width-1-1">Sign me up!</button>
              </div>
            </fieldset>
          </form>

        </div>
      </div> 
      <!-- right footer : logos & social media -->
      <div class="uk-width-medium-1-3">
        <div class="uk-panel">
          <div class="uk-flex uk-flex-middle uk-flex-center">
            <div class="uk-panel">
              <a href="http://technoculture.club">
                <img src="{{ url('theme://images/logo_TCC_M.png') }}" width="60px">
              </a>
            </div>
            <div class="uk-panel uk-panel-space">
              <i class="uk-icon-large uk-icon-plus"></i>
            </div>
            <div class="uk-panel">
              <a href="{{ base_url == '' ? '/' : base_url }}">
                <img src="{{ url('theme://images/logo.png') }}" width="65px">
              </a>
            </div>
          </div>
          <!-- social media links -->
          <div class="uk-flex uk-flex-middle uk-flex-center">
            <ul class="uk-subnav">
              <li><a herf="https://www.facebook.com/technocultureclub/"><i class="uk-icon-facebook-square uk-icon-medium"></i></a></li>
              <li><a herf="http://twitter.com/technocultureclub"><i class="uk-icon-twitter-square uk-icon-medium"></i></a></li>
              <li><a herf="http://www.linkedin.com/company/technocultureclub"><i class="uk-icon-linkedin-square uk-icon-medium"></i></a></li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>